@page
@model GroupStudyClient.Pages.CreateAccountModel

@{
    ViewData["Title"] = "Register";
}

<style>
    body {
        background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
    }

    h1 {
        background: linear-gradient(45deg, #FFC300, #FF5733);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        font-size: 32px;
        font-weight: bold;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form {
        background-color: white;
        border: 1px solid #808080;
        border-radius: 10px;
        padding: 40px;
        margin-top: 20px;
        width: 800px; /* Đặt chiều ngang mong muốn cho .form */
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        color: #FF5733;
        font-weight: bold;
        font-size: 18px;
    }

    .btn-back {
        background-color: #FF0000; /* Màu đỏ */
        border-color: #FC00FF;
        border-radius: 10px;
        padding: 10px;
        font-size: 18px;
        cursor: pointer;
        color: #FFFFFF;
        width: 100%;
        margin-top: 20px;
    }

    input.form-control {
        border: 1px solid #00BCD4;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
        width: 100%; /* Đặt chiều ngang đầy đủ cho input */
    }

    select.form-control {
        border: 1px solid #00BCD4;
        border-radius: 5px;
        padding: 4px;
        font-size: 16px;
        width: 100%; /* Đặt chiều ngang đầy đủ cho select */
    }

    textarea.form-control {
        border: 1px solid #00BCD4;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
        width: 100%; /* Đặt chiều ngang đầy đủ cho textarea */
    }

    button.btn-primary {
        background-color: #0080FF; /* Màu xanh dương */
        border-color: #FC00FF;
        border-radius: 10px;
        padding: 10px;
        font-size: 18px;
        cursor: pointer;
        color: #FFFFFF;
        width: 100%;
    }

        button.btn-primary:hover {
            background-color: #fc466b;
            border-color: #fc466b;
        }

    p a {
        color: #FFC300;
        font-weight: bold;
        font-size: 16px;
    }
</style>


<div class="container">
    <div class="form">
        <h1>Register</h1>

        @if (Model.ModelState.Any())
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="Email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="Password" required>
            </div>
            <div class="form-group">
                <label for="role">Role</label>
                <select class="form-control" id="role" name="Role" required>
                    <option value="">Select Role</option>
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                    <option value="GroupAdmin">GroupAdmin</option>
                    <option value="GroupMember">GroupMember</option>
                </select>
            </div>
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" class="form-control" id="firstName" name="FirstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" class="form-control" id="lastName" name="LastName" required>
            </div>
            <div class="form-group">
                <label for="dateOfBirth">Date of Birth</label>
                <input type="date" class="form-control" id="dateOfBirth" name="DateOfBirth">
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber">
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <textarea class="form-control" id="address" name="Address"></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Register</button>
                <a href="/login" class="btn btn-secondary btn-back">Back</a> 
            </div>
        </form>
    </div>
</div>

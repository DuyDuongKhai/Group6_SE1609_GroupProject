@page
@model GroupStudyClient.Pages.LoginModel
@{
}

<style>
    body {
        background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
    }

    h1 {
        background: linear-gradient(45deg, #FFC300, #FF5733);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-align: center;
        font-size: 32px;
        font-weight: bold;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .form {
        background-color: white;
        border: 1px solid #808080;
        border-radius: 10px;
        padding: 40px;
        margin-top: 160px;
        width: 400px; /* Đặt chiều ngang mong muốn cho .form */
    }

    .form-group {
        width: 100%;
        margin-bottom: 20px;
    }

    #showPasswordButton {
        font-size: 12px; /* Điều chỉnh kích thước phông chữ */
    }

    label {
        color: #FF5733;
        font-weight: bold;
        font-size: 18px; /* Tăng kích thước chữ cho label */
    }

    input.form-control {
        border: 1px solid #00BCD4;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px; /* Tăng kích thước chữ cho input */
    }

    button.btn-primary {
        background-color: #0080FF; /* Màu xanh dương */
        border-color: #fc00ff;
        border-radius: 10px;
        padding: 10px;
        font-size: 18px; /* Tăng kích thước chữ cho button */
        cursor: pointer;
        color: #FFFFFF;
    }

        button.btn-primary:hover {
            background-color: #fc466b;
            border-color: #fc466b;
        }

    p a {
        color: #FFC300;
        font-weight: bold;
        font-size: 16px; /* Tăng kích thước chữ cho link */
    }
</style>


<div class="container">
    <div class="form">
        <h1>Group Study</h1>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="alert alert-danger">
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="Input.Email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <div class="password-wrapper">
                    <input type="password" id="password" name="Input.Password" class="form-control" required>
                    <button type="button" id="showPasswordButton" class="btn btn-secondary">Show Password</button>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary"><strong>Login</strong></button>
            </div>
        </form>
        <div class="text-center mt-3">
            <p>Don't have an account? <a href="/CreateAccount">Register</a></p>
        </div>
    </div>
</div>

<script>
    document.getElementById("showPasswordButton").addEventListener("click", function () {
        var passwordInput = document.getElementById("password");
        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            this.textContent = "Hide Password";
        } else {
            passwordInput.type = "password";
            this.textContent = "Show Password";
        }
    });
</script>
@page
@model GroupStudyClient.Pages.Users.DashboardProfileModel

<!DOCTYPE html>
<html>
<head>
    <title>Dashboard Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        /* CSS để tạo khung cho trang */
        .page-container {
            margin-top: 20px;
            padding: 20px;
            background-color: #FFFFFF;
            border-radius: 10px;
        }

        /* CSS còn lại của trang */
        body {
            background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
        }

        h1 {
            background: linear-gradient(45deg, #FFC300, #FF5733);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
        }

        .form-group label {
            color: #FF5733;
        }

        .form-control {
            color: #000000;
            background-color: linear-gradient(45deg, #FFC300, #FF5733);
            border-color: #FF0000;
        }

            .form-control:focus {
                color: #000000;
                background-color: #00FF00;
                border-color: #00FF00;
                box-shadow: 0 0 0 0.2rem rgba(0, 255, 0, 0.25);
            }

        .btn-primary {
            color: #FFFFFF;
            background-color: #FFC300;
            border-color: #FFC300;
        }

            .btn-primary:hover {
                background-color: #FFC300;
                border-color: #FFC300;
            }
    </style>
</head>
<body>
    <div class="container">

        <div class="page-container">

            <h1>Dashboard Profile </h1>

            @if (Model.User != null)
            {
                <form method="post">
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" class="form-control custom-input" id="email" name="Email" value="@Model.User.Email" readonly>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <div class="input-group">
                            <input type="password" class="form-control custom-input" id="password" name="Password" value="@Model.User.Password" readonly>
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility()">Show</button>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input type="text" class="form-control custom-input" id="firstName" name="FirstName" value="@Model.User.FirstName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name:</label>
                        <input type="text" class="form-control custom-input" id="lastName" name="LastName" value="@Model.User.LastName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="dateOfBirth">Date of Birth:</label>
                        <input type="date" class="form-control custom-input" id="dateOfBirth" name="DateOfBirth" value="@Model.User.DateOfBirth?.ToString("yyyy-MM-dd")" readonly>
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number:</label>
                        <input type="text" class="form-control custom-input" id="phoneNumber" name="PhoneNumber" value="@Model.User.PhoneNumber" readonly>
                    </div>
                    <div class="form-group">
                        <label for="address">Address:</label>
                        <input type="text" class="form-control custom-input" id="address" name="Address" value="@Model.User.Address" readonly>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary custom-button" id="editButton">Edit</button>
                        <button type="submit" class="btn btn-success d-none custom-button" id="saveButton">Save</button>
                        <button type="button" class="btn btn-secondary custom-button" id="cancelButton">Cancel</button>
                    </div>
                </form>
            }

        </div>

    </div>


    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script>
        /* JavaScript còn lại của trang */
        document.getElementById("editButton").addEventListener("click", function () {
            var inputs = document.getElementsByTagName("input");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].readOnly = false;
            }

            document.getElementById("editButton").classList.add("d-none");
            document.getElementById("saveButton").classList.remove("d-none");
        });

        document.getElementById("saveButton").addEventListener("click", function () {
            var inputs = document.getElementsByTagName("input");
            for (var i = 0; i < inputs.length; i++) {
                inputs[i].readOnly = true;
            }

            document.getElementById("editButton").classList.remove("d-none");
            document.getElementById("saveButton").classList.add("d-none");
        });

        document.getElementById("cancelButton").addEventListener("click", function () {
            window.location.href = "/Users/Index";
        });

        function togglePasswordVisibility() {
            var passwordInput = document.getElementById("password");
            if (passwordInput.type === "password") {
                passwordInput.type = "text";
            } else {
                passwordInput.type = "password";
            }
        }
    </script>
</body>
</html>

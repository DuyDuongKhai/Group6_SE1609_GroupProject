@page
@model GroupStudyClient.Pages.Admin.ChatMessageManagement.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    @*<a asp-page="Create">Create New</a>*@
</p>
<div class="card">
     <div class="card-body">
<table id="dtBasicExample" class="table table-striped" cellspacing="0" width="100%">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ChatMessage[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChatMessage[0].SentAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChatMessage[0].Group)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChatMessage[0].User)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ChatMessage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SentAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Email)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.MessageId" class="btn btn-info">Details</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
</div>
@section Scripts {
   

    <script>
        $(document).ready(function () {
            $('#dtBasicExample').DataTable();
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}

@page
@model GroupStudyClient.Pages.Admin.ChatMessageManagement.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>ChatMessage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChatMessage.MessageId" />
            <div class="form-group">
                <label asp-for="ChatMessage.GroupId" class="control-label"></label>
                <select asp-for="ChatMessage.GroupId" class="form-control" asp-items="ViewBag.GroupId"></select>
                <span asp-validation-for="ChatMessage.GroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatMessage.UserId" class="control-label"></label>
                <select asp-for="ChatMessage.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="ChatMessage.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatMessage.Content" class="control-label"></label>
                <input asp-for="ChatMessage.Content" class="form-control" />
                <span asp-validation-for="ChatMessage.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatMessage.SentAt" class="control-label"></label>
                <input asp-for="ChatMessage.SentAt" class="form-control" />
                <span asp-validation-for="ChatMessage.SentAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

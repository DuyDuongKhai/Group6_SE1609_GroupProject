@page
@model GroupStudyClient.Pages.GroupMember.CreateCommentModel

<h1>Create Comment</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="userId">User ID:</label>
        <input type="number" class="form-control" id="userId" name="CommentDto.UserId" asp-for="CommentDto.UserId" />
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="CommentDto.Content" asp-for="CommentDto.Content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

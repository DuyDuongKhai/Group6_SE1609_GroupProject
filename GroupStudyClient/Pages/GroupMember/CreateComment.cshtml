@page
@using Microsoft.AspNetCore.Http
@model GroupStudyClient.Pages.GroupMember.CreateCommentModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Post</title>
    <style>
        body {
            background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
        }

        h1 {
            background: linear-gradient(45deg, #FFC300, #FF5733);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form {
            background-color: white; /* Đặt màu nền là màu trắng */
            border: 1px solid #808080;
            border-radius: 10px;
            padding: 40px;
            margin-top: 16px;
            width: 400px; /* Đặt chiều ngang mong muốn cho .form */
        }

        .form-group {
            width: 100%;
            margin-bottom: 20px;
            margin-left: -10px; /* Thay đổi giá trị margin-left để căn lề trái */
        }

        #showPasswordButton {
            font-size: 12px; /* Điều chỉnh kích thước phông chữ */
        }

        label {
            color: #FF5733;
            font-weight: bold;
            font-size: 18px; /* Tăng kích thước chữ cho label */
        }

        input.form-control {
            border: 1px solid #00BCD4;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px; /* Tăng kích thước chữ cho input */
        }

        button.btn-primary {
            background-color: #0080FF; /* Màu xanh dương */
            border-color: #fc00ff;
            border-radius: 10px;
            padding: 10px;
            font-size: 18px; /* Tăng kích thước chữ cho button */
            cursor: pointer;
            color: #FFFFFF;
            margin-left: auto; /* Căn chỉnh button sang bên phải */
        }

            button.btn-primary:hover {
                background-color: #fc466b;
                border-color: #fc466b;
            }

        p a {
            color: #FFC300;
            font-weight: bold;
            font-size: 16px; /* Tăng kích thước chữ cho link */
        }
    </style>
</head>
<body>
<h1>Create Comment</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="userId">User ID:</label>
            <input type="text" class="form-control" id="userId" name="UserId" asp-for="CommentDto.UserId" value="@HttpContext.Session.GetString("UserId")" />
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="CommentDto.Content" asp-for="CommentDto.Content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
</body>
</html>

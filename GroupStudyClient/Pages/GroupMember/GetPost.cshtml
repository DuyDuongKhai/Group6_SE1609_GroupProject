@page
@using BusinessObject.Models
@model GroupStudyClient.Pages.GroupMember.GetPostModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Post</title>
    <!-- Thêm các liên kết CSS của Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <style>
        body {
            background-color: #f7f7f7;
            color: #333;
            font-family: Arial, sans-serif;
        }

        h1 {
            background-color: #FF5733;
            color: white;
            text-align: center;
            padding: 20px;
        }

        .post-card {
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .post-details {
            margin-top: 15px;
            color: #777;
        }

        .post-id-group-id-user-id {
            font-size: 12px;
            color: #888;
        }

        .post-id {
            font-size: 12px;
            color: #555;
        }

        .btn-comment {
            color: #FFC300;
            text-decoration: none;
            font-weight: bold;
        }

            .btn-comment:hover {
                color: #FFA500;
            }

        .btn-viewComment {
            color: #B16E4B;
            text-decoration: none;
            font-weight: bold;
        }

            .btn-viewComment:hover {
                color: #B16E4B;
            }

        .no-posts {
            text-align: center;
            font-weight: bold;
            margin-top: 50px;
            color: #555;
        }
    </style>
</head>
<body>
    <h1>List Post</h1>

    <div class="container">
        @if (ViewData["Posts"] != null && ((List<Post>)ViewData["Posts"]).Count > 0)
        {
            <div class="row">
                @foreach (var post in (List<Post>)ViewData["Posts"])
                {
                    <div class="col-md-4">
                        <div class="post-card">
                            <h5 class="card-title"><span class="post-id">Post ID: @post.PostId</span></h5>
                            <div class="post-id-group-id-user-id">
                                <p>Group ID: @post.GroupId | User ID: @post.UserId | @post.CreatedAt</p>
                            </div>
                            <div class="post-details">
                                <p><strong>Content:</strong> @post.Content</p>
                            </div>
                            <a class="btn-comment" href="/GroupMember/CreateComment?postId=@post.PostId">Comment</a>
                            <a class="btn-viewComment" href="/GroupMember/GetCommentById?id=@post.PostId">View Comment</a>
                            <!-- Thẻ div để chứa danh sách bình luận -->
                            <div class="comment-list" style="display: none;"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-posts">Không tìm thấy bài đăng nào.</p>
        }
    </div>

    <!-- Thêm các liên kết JS của Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+2ELBYktHIDKpB7mFzo1UcNMtvzkOr3K8KSxFzjZROM78y" crossorigin="anonymous"></script>
</body>
</html>

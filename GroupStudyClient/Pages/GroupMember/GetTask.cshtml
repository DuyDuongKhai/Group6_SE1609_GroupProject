@page
@model GroupStudyClient.Pages.GroupMember.GetTaskModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Post</title>
    <style>
        body {
            background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
            color: white;
        }

        h1 {
            background: linear-gradient(45deg, #FFC300, #FF5733);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
        }

        .form {
            background-color: white;
            border: 1px solid #808080;
            border-radius: 10px;
            padding: 20px;
            margin-top: 16px;
        }

        table {
            margin-top: 16px;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid white;
            color: black;
        }

        th {
            background-color: #FF5733;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.1); /* Màu nền dòng chẵn */
        }

        tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.2); /* Màu nền dòng hover */
        }

        td {
            color: black;
        }

        a {
            color: #FFC300;
            text-decoration: none;
        }

        p {
            margin-top: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    

    <div class="form">
        <h1>Tasks</h1>
        @if (Model.Tasks != null && Model.Tasks.Count > 0)
        {
            <table>
                <thead>
                    <tr>
                        <th>Task ID</th>
                        <th>Task Title</th>
                        <th>Description</th>
                        <th>AssignedToUserId</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td>@task.TaskId</td>
                            <td>@task.TaskTitle</td>
                            <td>@task.Description</td>
                            <td>@task.AssignedToUserId</td>
                            <td>@task.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No tasks found.</p>
        }
    </div>

</body>
</html>

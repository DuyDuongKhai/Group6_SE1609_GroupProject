@page
@model GroupStudyClient.Pages.GroupMember.GetCommentModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get Comment</title>
    <style>
        body {
            background-image: radial-gradient(circle, rgba(37,52,97,1) 0%, rgba(20,28,51,1) 100%);
            color: white;
        }

        h1 {
            background: linear-gradient(45deg, #FFC300, #FF5733);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
            font-size: 32px;
            font-weight: bold;
        }

        .form {
            background-color: white;
            border: 1px solid #808080;
            border-radius: 10px;
            padding: 20px;
            margin-top: 16px;
        }

        table {
            margin-top: 16px;
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid white;
            color: black;
        }

        th {
            background-color: #FF5733;
            font-weight: bold;
        }

        tbody tr:nth-child(even) {
            background-color: rgba(0, 0, 0, 0.1); /* Màu nền dòng chẵn */
        }

        tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.2); /* Màu nền dòng hover */
        }

        td {
            color: black;
        }

        a {
            color: #FFC300;
            text-decoration: none;
        }

        p {
            margin-top: 16px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>All Comments</h1>

    <div class="form">
        @if (Model.Comments != null && Model.Comments.Any())
        {
            <table class="comment-table">
                <thead>
                    <tr>
                        <th>Comment ID</th>
                        <th>Post ID</th>
                        <th>User ID</th>
                        <th>Content</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var comment in Model.Comments)
                    {
                        <tr>
                            <td>@comment.CommentId</td>
                            <td>@comment.PostId</td>
                            <td>@comment.UserId</td>
                            <td>@comment.Content</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No comments found.</p>
        }

        @if (Model.Comments != null && Model.Comments.Any())
        {
            <div class="form-group">
                <h3>Get Comments by Post ID</h3>
                <form method="get" asp-page="GetCommentById">
                    <label for="postId">Post ID:</label>
                    <input type="number" id="postId" name="id" class="form-control" required />
                    <button type="submit" class="btn btn-primary">Get Comments</button>
                </form>
            </div>
        }
    </div>
</body>
</html>


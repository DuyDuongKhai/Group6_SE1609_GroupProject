@page
@model GroupStudyClient.Pages.GroupMember.IndexModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group Member Index</title>
    <style>
        body {
            background-image: radial-gradient(circle, rgba(37, 52, 97, 1) 0%, rgba(20, 28, 51, 1) 100%);
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f1f1f1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .content {
            max-width: 400px;
            background-color: #fff;
            border-radius: 5px;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
            font-size: 24px;
            margin-bottom: 30px;
        }

        .button-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .button {
            display: block;
            padding: 10px;
            background-color: #fc00ff;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #ff34b3;
            }

        footer {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="content">
            <h1>Welcome to the Group Member Index page</h1>
            <div class="button-container">
                <a class="button" asp-page="/GroupMember/CreatePost">Create a new post</a>
                <a class="button" asp-page="/GroupMember/GetPost" asp-route-groupId="@Request.Query["groupId"]">View all Posts</a>
                <a class="button" asp-page="/GroupMember/GetTask" asp-route-groupId="@Request.Query["groupId"]" asp-route-userId="@Request.Query["userId"]">View Tasks</a>
            </div>

        </div>
    </div>

    
</body>
</html>
@page
@model GroupStudyClient.Pages.GroupMember.CreatePostModel

<h1>Create Post</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form method="post">
    <div class="form-group">
        <label for="groupId">Group ID:</label>
        <input type="number" class="form-control" id="groupId" name="GroupId" asp-for="PostDto.GroupId" />
    </div>
    <div class="form-group">
        <label for="userId">User ID:</label>
        <input type="number" class="form-control" id="userId" name="UserId" asp-for="PostDto.UserId" />
    </div>
    <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-control" id="content" name="Content" asp-for="PostDto.Content"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<h2 class="big-heading">Groups</h2>

@if (Model.Groups != null && Model.Groups.Count > 0)
{
    @foreach (var group in Model.Groups)
    {
        <div class="table">
            <h2 class="heading">
                @group.GroupName
            </h2>
            <div class="block">
                <p>
                    Group Admin
                    <span class="price">
                        @group.GroupAdmin.LastName
                    </span>
               
                </p>
            </div>
            <div class="block">
                <p>
                    Created At
                    <br>
                    <span class="price">
                        @group.CreatedAt
                    </span>
                </p>
            </div>
            <div class="block">
                <p>
                    Description
                    <span class="price">
                        @group.Description
                    </span>
                </p>
            </div>
            <form method="post" asp-page="/GroupAdmin/Group" asp-page-handler="GroupMember" asp-route-GroupId="@group.GroupId" >

            <button type="submit" class="btn">
                        Join Group
                
            </button>
            </form>

        </div>
    }
}
else
{
    <p>No groups found.</p>
}
